<Window x:Class="MusicLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:MusicLibrary"
        mc:Ignorable="d"
        Title="PALT FACTORY" Height="500" Width="1000">

    <Window.InputBindings>
        <!-- Add -->
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding AddPlaylistDialogCommand}" />
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding AddArtistDialogCommand}" />
        <KeyBinding Key="L" Modifiers="Ctrl" Command="{Binding AddAlbumDialogCommand}" />
        <KeyBinding Key="T" Modifiers="Ctrl" Command="{Binding AddTrackDialogCommand}" />

        <!-- Update -->
        <KeyBinding Key="P" Modifiers="Shift" Command="{Binding UpdatePlaylistDialogCommand}" />
        <KeyBinding Key="A" Modifiers="Shift" Command="{Binding UpdateArtistDialogCommand}" />
        <KeyBinding Key="L" Modifiers="Shift" Command="{Binding UpdateAlbumDialogCommand}" />
        <KeyBinding Key="T" Modifiers="Shift" Command="{Binding UpdateTrackDialogCommand}" />

        <!-- Delete -->
        <KeyBinding Key="P" Modifiers="Alt" Command="{Binding DeletePlaylistDialogCommand}" />
        <KeyBinding Key="A" Modifiers="Alt" Command="{Binding DeleteArtistDialogCommand}" />
        <KeyBinding Key="L" Modifiers="Alt" Command="{Binding DeleteAlbumDialogCommand}" />
        <KeyBinding Key="T" Modifiers="Alt" Command="{Binding DeleteTrackDialogCommand}" />
    </Window.InputBindings>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <!-- MENU -->
        <Menu Grid.Row="0">
            <MenuItem Header="Edit">

                <MenuItem Header="Add">
                    <MenuItem Header="Playlist" Click="AddPlaylist_Click" InputGestureText="Ctrl+P"/>
                    <MenuItem Header="Artist" Click="AddArtist_Click" InputGestureText="Ctrl+A"/>
                    <MenuItem Header="Album" Click="AddAlbum_Click" InputGestureText="Ctrl+L"/>
                    <MenuItem Header="Track" Click="AddTrack_Click" InputGestureText="Ctrl+T"/>
                </MenuItem>

                <MenuItem Header="Update">
                    <MenuItem Header="Playlist" Click="UpdatePlaylist_Click" InputGestureText="Shift+P"/>
                    <MenuItem Header="Artist" Click="UpdateArtist_Click" InputGestureText="Shift+A"/>
                    <MenuItem Header="Album" Click="UpdateAlbum_Click" InputGestureText="Shift+L"/>
                    <MenuItem Header="Track" Click="UpdateTrack_Click" InputGestureText="Shift+T"/>
                </MenuItem>

                <MenuItem Header="Delete">
                    <MenuItem Header="Playlist" Click="DeletePlaylist_Click" InputGestureText="Alt+P"/>
                    <MenuItem Header="Artist" Click="DeleteArtist_Click" InputGestureText="Alt+A"/>
                    <MenuItem Header="Album" Click="DeleteAlbum_Click" InputGestureText="Alt+L"/>
                    <MenuItem Header="Track" Click="DeleteTrack_Click" InputGestureText="Alt+T"/>
                </MenuItem>

            </MenuItem>
        </Menu>

        <!-- CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!-- LEFT PLAYLIST-->

            <Border Grid.Column="0"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    Margin="5">

                <DockPanel>
                    <TextBlock Text="Playlists"
                               FontWeight="Bold"
                               Padding="5"
                               DockPanel.Dock="Top"/>

                    <ListBox ItemsSource="{Binding Playlists}"
                             SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"
                             DisplayMemberPath="Name"
                             Margin="5"/>
                </DockPanel>

            </Border>


            <!-- MIDDLE: ARTISTS -->

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border 
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        Margin="5">     
                    <DockPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="Artists"
                                 FontWeight="Bold"
                                 Padding="5"
                                 DockPanel.Dock="Top"/>
                                <TextBlock Grid.Column="1"
                                           Text="ⓘ"
                                           FontSize="20"
                                           Margin="220,0,0,0"
                                           VerticalAlignment="Center"
                                           Cursor="Arrow"
                                           Focusable="True"
                                           ToolTipService.ShowDuration="60000"
                                           AutomationProperties.Name="Information"
                                           AutomationProperties.HelpText="Double click track to add to playlist">
                                    <TextBlock.ToolTip>
                                        <ToolTip Placement="Mouse">
                                            <TextBlock Text="Double click track to add to playlist"/>
                                        </ToolTip>
                                    </TextBlock.ToolTip>
                             </TextBlock>

                            </StackPanel>
                            <TreeView x:Name="myTreeView"
                                  SelectedItemChanged="TreeView_SelectedItemChanged" Margin="5" Grid.Row="1" MouseDoubleClick="TreeView_MouseDoubleClick">
                            <TreeView.Resources>
                                <HierarchicalDataTemplate DataType="{x:Type model:Artist}" ItemsSource="{Binding Albums}">
                                    <TextBlock>
                                         <Run Text="{Binding Name}" />
                                         <Run Text=" (" /><Run Text="{Binding Albums.Count, Mode=OneWay}" />
                                         <Run Text=" albums)" />        
                                    </TextBlock>
                                </HierarchicalDataTemplate>
                                <HierarchicalDataTemplate DataType="{x:Type model:Album}" ItemsSource="{Binding Tracks}">
                                    <TextBlock Text="{Binding Title}" />
                                </HierarchicalDataTemplate>
                                <HierarchicalDataTemplate DataType="{x:Type model:Track}">
                                    <TextBlock Text="{Binding Name}" />
                                </HierarchicalDataTemplate>
                            </TreeView.Resources>
                        </TreeView>

                        </Grid>
                    </DockPanel>

                </Border>
            </Grid>

            <!-- RIGHT -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <DataGrid x:Name="myDataGrid"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          IsReadOnly="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserResizeColumns="False"
                          CanUserResizeRows="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="True"
                          SelectionMode="Extended"
                          SelectionUnit="CellOrRowHeader"
                          RowHeaderWidth="28"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          AlternationCount="2"
                          RowBackground="White"
                          AlternatingRowBackground="NavajoWhite"
                          ItemsSource="{Binding Tracks}"
                          ScrollViewer.ScrollChanged="DataGrid_ScrollChanged"
                          IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                          SelectedItem="{Binding SelectedPlaylistTrack, Mode=TwoWay}">

                    <DataGrid.RowHeaderStyle>
                        <Style TargetType="DataGridRowHeader">
                            <Setter Property="Content" Value="🗑"/>
                            <Setter Property="ToolTip" Value="Ta bort låt från playlist"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Foreground" Value="DarkRed"/>
                            <Setter Property="Padding" Value="5"/>
                            <EventSetter Event="PreviewMouseLeftButtonDown"
                                         Handler="RowHeader_DeleteClicked"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowHeaderStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Track" Binding="{Binding Name}" FontStyle="Italic" Width="*"/>
                        <DataGridTextColumn Header="Album" Binding="{Binding Album.Title}" Width="*"/>
                        <DataGridTextColumn Header="Length (ms)" Binding="{Binding Milliseconds}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
